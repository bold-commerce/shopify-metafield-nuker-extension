{
	"manifest_version": 2,
	
	"name": "Bold Metafield Nuker",
	"description": "This extension wipes out Bold Commerce specific metafields from products & variants on a Shopify store.",
	"version": "0.1.0",
	
	"background": {
		"scripts": ["background.js"]
	},
	
	"permissions": [
		"activeTab",
		"http://*.myshopify.com/*",
		"https://*.myshopify.com/*"
	],
	
	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Bold Metafield Nuker"
	}
}
